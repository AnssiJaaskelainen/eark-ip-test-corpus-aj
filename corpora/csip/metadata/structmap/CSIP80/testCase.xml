<!-- Root element for an individual test case, allows these to be wrapped into
XML lists -->
<testCase xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="testCase.xsd"
          testable="TRUE">
    <!-- Unique ID for the test case -->
    <id specification="E-ARK CSIP" version="2.0-DRAFT" requirementId="CSIP80"/>
    <!-- URL references to requirements for convenient lookup -->
    <references>
        <reference requirementId="CSIP80" URL="http://earkcsip.dilcis.eu/#CSIP80"/>
    </references>
    <!-- The full text of the requirement. -->
    <requirementText>The structural map element (structMap) is the only mandatory element in the METS.
        The structMap in the CSIP describes the highest logical structure of the IP.
        Each METS file must include ONE structural map (structMap) element used exactly as described here.
        Institutions can add their own additional custom structural maps as separate (structMap) sections.
    </requirementText>
    <!-- Textual description of the test case, extra notes beyond the requirment text. -->
    <description>
        At least one Structural map element must be present.
        
    </description>
    <!-- List of requirments that this test case depends on in addition to the
  main requirememt, e.g. general requirments on the form of IDs -->
    <dependencies>
    </dependencies>
    <!-- A list of the validation rules derived from the test case -->
    <rules>
        <rule id="1">
            <!-- Text description of the validation rule -->
            <description>There should be an XML element named structMap in the mets.xml</description>
            <!-- Details of the validation error generated by the message, can be one of: [ ERROR | WARNING | INFO ]-->
            <error level="ERROR">
                <!-- Expected error message when the rule is violated. -->
                <message>The element structMap does not exist in METS.xml. It MUST be there.</message>
            </error>
            <corpusPackages>
                <!-- Details of corpus packages designed to test this validation rule. -->
                <package name="IP_18000_CSIP80_1" isValid="FALSE">
                    <path>/corpora/csip/metadata/structMap/CSIP80/IP_18000_CSIPCSIP80_1</path>
                    <!-- Full description of corpus package features. -->
                    <description> TODO!!! Contains no structMap element in Root METS or Representation METS</description>
                </package>
            </corpusPackages>
        </rule>
        <rule id="2">
            <!-- Text description of the validation rule -->
            <description>Mets.xml structMap element cannot be empty</description>
            <!-- Details of the validation error generated by the message, can be one of: [ ERROR | WARNING | INFO ]-->
            <error level="WARNING">
                <!-- Expected error message when the rule is violated. -->
                <message>Mets.xml structMap element cannot be empty. It MUST describe the highest logical structure of the IP.</message>
            </error>
            <corpusPackages>
                <!-- Details of corpus packages designed to test this validation rule. -->
                <package name="IP_18000_CSIP80_2" isValid="FALSE">
                    <path>/corpora/csip/metadata/structMap/CSIP80/IP_18000_CSIPCSIP80_2</path>
                    <!-- Full description of corpus package features. -->
                    <description> TODO!!! Empty tructMap element exists in Root METS </description>
                </package>
            </corpusPackages>
        </rule>
    </rules>
</testCase>
