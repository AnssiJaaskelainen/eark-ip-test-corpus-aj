<!-- Root element for an individual test case, allows these to be wrapped into
XML lists. -->
<testCase testable="TRUE">
  <!-- Unique ID for the test case. -->
  <id specification="" version="" section="" requirementId="" />
  <!-- URL references to requirements for convenient lookup. -->
  <references>
    <reference requirementId=""></reference>
  </references>
  <!-- Textual description of the test case, may just be a repeat of the
  requirement text. -->
  <description></description>
  <!-- List of requirements that this test case depends on in addition to the
  main requirement, e.g. general requirements on the form of IDs. -->
  <dependencies>
    <!-- Individual test case dependencies listed by ID. -->
    <dependency requirementId="" />
  </dependencies>
  <!-- A list of the validation rules derived from the test case. -->
  <rules>
    <!-- Individual validation rule entry, identified by a running number
    that's unique within the test case only. -->
    <rule id="">
      <!-- Text description of the validation rule. -->
      <description></description>
      <!-- Details of the validation error generated by the message.
      @level - one of [ ERROR | WARNING | INFO ]. -->
      <error level="">
        <!-- Expected error message when the rule is violated. -->
        <message></message>
      </error>
      <corpusPackages>
        <!-- Details of corpus packages designed to test this validation rule.
        @name - a descriptive name for the package, unique across the corpus
        @isValid - one of [ TRUE | FALSE ]. -->
        <package name="" isValid="">
          <!-- The relative path to the test corpus package root folder. -->
          <path></path>
          <!-- Full description of corpus package features. -->
          <description></description>
        </package>
      </corpusPackages>
    </rule>
  </rules>
</testCase>
